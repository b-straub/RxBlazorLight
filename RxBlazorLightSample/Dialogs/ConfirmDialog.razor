<MudDialog>
    <DialogContent>
        @Message
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Submit">@Confirm</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public string? Confirm { get; set; }

    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();

    protected override void OnInitialized()
    {
        if (MudDialog is not null)
        {
            MudDialog.Options.CloseButton = false;
            MudDialog.SetOptions(MudDialog.Options);
        }

        base.OnInitialized();
    }
}