@typeparam T where T : IRxBLStateOwner
@inherits RxBLStateSubscriber<T>

<MudElement>
    <MudDialog>
        <DialogContent>
            @Message
        </DialogContent>
        <DialogActions>
            <MudButton Disabled=@CanNotCancel() Variant="Variant.Filled" Color=@(SuccessOnConfirm ? Color.Error : Color.Success) OnClick="Cancel">Cancel</MudButton>
            <MudButtonRx @ref=_buttonRef Variant="Variant.Filled" Color=@(SuccessOnConfirm ? Color.Success : Color.Error)
                         StateCommand=@StateCommand ExecuteCallback=@ExecuteCallback CanChangeCallback=@CanChangeCallback>
                @ConfirmButton
            </MudButtonRx>
        </DialogActions>
    </MudDialog>
</MudElement>