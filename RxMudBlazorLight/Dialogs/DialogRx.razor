@typeparam T where T : IRxBLService
@inherits RxBLServiceSubscriber<T>

<MudElement>
    <MudDialog>
        <DialogContent>
            @Message
        </DialogContent>
        <DialogActions>
            <MudButton Disabled=@CanNotCancel() Variant="Variant.Filled" Color=@(SuccessOnConfirm ? Color.Error : Color.Success) OnClick="Cancel">Cancel</MudButton>
            <MudButtonRx @ref=_buttonRef Variant="Variant.Filled" Color=@(SuccessOnConfirm ? Color.Success : Color.Error)
                         StateCommand=@StateCommand ChangeState=@ChangeState CanChange=@CanChange>
                @ConfirmButton
            </MudButtonRx>
        </DialogActions>
    </MudDialog>
</MudElement>