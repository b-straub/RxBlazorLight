@inherits MudIconButtonAsyncBaseRx

<MudBadge Visible=@(_buttonRx is not null && _hasProgress && _buttonRx.GetBadgeIcon(StateCommand, IconVariant, false) != string.Empty)
          Icon=@_buttonRx!.GetBadgeIcon(StateCommand, IconVariant, false) Color=@Color Overlap="true">
    @RenderBase()
</MudBadge>

@code {
    [Parameter, EditorRequired]
    public required Func<Task> ChangeStateAsync { get; init; }

    [Parameter]
    public bool HasProgress { get; set; } = false;

    protected override void OnInitialized()
    {
        _changeStateAsync = ChangeStateAsync;
        _hasProgress = HasProgress;

        base.OnInitialized();
    }
}
