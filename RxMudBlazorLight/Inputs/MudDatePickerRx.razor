@inherits MudDatePicker

@RenderBase()

@code {
    [Parameter, EditorRequired]
    public required IState<DateTime> State { get; init; }

    [Parameter]
    public Func<IState<DateTime>, bool>? CanChange { get; init; }

    private RenderFragment RenderBase() => builder => base.BuildRenderTree(builder);

    protected override void OnInitialized()
    {
        DateChanged = EventCallback.Factory.Create<DateTime?>(this, v =>
        {
            if (v.HasValue)
            {
                State.Change(s => s.Value = v.Value);
            }
        });

        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        Disabled = (CanChange is not null && !State.CanChange(CanChange));
        Date = State.Value;
        if (Validation is not null)
        {
            var validate = (Func<IState<DateTime>, StateValidation>)Validation;
            var validation = validate(State);
            ErrorText = validation.Message;
            Error = validation.Error;
        }

        base.OnParametersSet();
    }
}
