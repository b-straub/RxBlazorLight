@inherits MudRating

@RenderBase()

@code {
    [Parameter, EditorRequired]
    public required IState<int> State { get; init; }

    [Parameter]
    public Func<IState<int>, bool>? CanChange { get; init; }

    private RenderFragment RenderBase() => builder => base.BuildRenderTree(builder);

    protected override void OnInitialized()
    {
        SelectedValueChanged = EventCallback.Factory.Create<int>(this, v =>
        {
            State.Change(s => s.Value = v);
        });

        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        Disabled = (CanChange is not null && !State.CanChange(CanChange));
        SelectedValue = State.Value;

        base.OnParametersSet();
    }
}
