@inherits MudRating

@RenderBase()

@code {
    [Parameter, EditorRequired]
    public required IState<int> State { get; init; }

    [Parameter]
    public Func<IStateBase<int>, bool>? CanChange { get; init; }

    private RenderFragment RenderBase() => builder => base.BuildRenderTree(builder);

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (State.HasValue())
        {
            SelectedValue = State.Value;
        }
        SelectedValueChanged = EventCallback.Factory.Create<int>(this, v =>
        {
            if (!v.Equals(State.Value))
            {
                State.Change(s => s.Value = v);
            }
        });
    }

    protected override void OnParametersSet()
    {
        if (State.Done() && State.HasValue())
        {
            SelectedValue = State.Value;
        }

        Disabled = (CanChange is not null && !State.CanChange(CanChange)) || State.Changing();

        base.OnParametersSet();
    }
}
