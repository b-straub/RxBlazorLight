@inherits MudSwitch<bool>

@RenderBase()

@code {
    [Parameter, EditorRequired]
    public required IState<bool> State { get; init; }

    [Parameter]
    public Func<IState<bool>, bool>? CanChange { get; init; }

    private RenderFragment RenderBase() => builder => base.BuildRenderTree(builder);

    protected override void OnInitialized()
    {
        ValueChanged = EventCallback.Factory.Create<bool>(this, v =>
        {
            State.Change(s => s.Value = v);
        });

        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        Disabled  = (CanChange is not null && !State.CanChange(CanChange));
        Value = State.Value;
        if (Validation is Func<IState<bool>, StateValidation> validate)
        {
            var validation = validate(State);
            ErrorText = validation.Message;
            Error = validation.Error;
        }

        base.OnParametersSet();
    }
}
