@inherits MudToggleIconButton

@RenderBase()

@code {
    [Parameter, EditorRequired]
    public required IState<bool> State { get; init; }

    [Parameter]
    public Func<IStateBase<bool>, bool>? CanChange { get; init; }

    [Parameter]
    public Func<Task<bool>>? ConfirmExecution { get; set; }

    [Parameter]
    public Action? BeforeExecution { get; set; }

    [Parameter]
    public Action? AfterExecution { get; set; }

    private RenderFragment RenderBase() => builder => base.BuildRenderTree(builder);

    protected override void OnParametersSet()
    {
        Toggled = State.Value;
        ToggledChanged = EventCallback.Factory.Create<bool>(this, v => State.Change(s => s.Value = v));

        Disabled = (CanChange is not null && !State.CanChange(CanChange)) || State.Changing();

        base.OnParametersSet();
    }
}
