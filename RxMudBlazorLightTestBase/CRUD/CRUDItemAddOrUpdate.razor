@inherits RxBLServiceSubscriber<CrudService>

@if (AddMode)
{
    <MudFabAsyncRx State=@Service.CRUDDBState CanChange=@Service.CanAdd Class="mr-2" Color="Color.Success" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" ChangeStateAsync=@ShowAddUpdateDialog />
}
else
{
    <MudIconButtonAsyncRx State=@Service.CRUDDBState CanChange=@(Service.CanUpdate(Item)) Color="Color.Info" Icon=@Icons.Material.Filled.Edit ChangeStateAsync=@ShowAddUpdateDialog />
}

@code {
    [Parameter, EditorRequired]
    public required bool AddMode { get; init; }

    [Parameter, EditorRequired]
    public required CRUDToDoItem? Item { get; init; }

    [Inject]
    public required IDialogService DialogService { get; init; }

    private async Task ShowAddUpdateDialog(IStateAsync<Unit> _)
    {
        var parameters = new DialogParameters { ["Item"] = Item };
        var dialog = DialogService.Show<CRUDItemDialog>(AddMode ? "Add ToDo" : "Edit ToDo", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var scope = (CrudService.CrudItemInput)result.Data;
            await scope.SubmitAsync();
        }
    }
}
