@inherits RxBLServiceSubscriber<TestService>

<PageTitle>Debug</PageTitle>

<MudStack AlignItems=@AlignItems.Start>
    <MudText Class="mb-4">Current count Async: @Service.CountStateAsync.Value</MudText>

    <MudIconButtonAsyncRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                          State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync
                          HasProgress=@false />

    <MudIconButtonAsyncRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                          State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync
                          HasProgress=@true />

    <MudIconButtonAsyncRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                          State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync
                          HasProgress=@true ForceBadge=@true />

    <MudIconButtonAsyncCancelRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                                State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10)
                                CancelColor=Color.Error HasProgress=@false />

    <MudIconButtonAsyncCancelRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                                State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10)
                                CancelColor=Color.Error HasProgress=@false ForceBadge=@true />

    <MudIconButtonAsyncCancelRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                                State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10)
                                CancelColor=Color.Error HasProgress=@true />

    <MudIconButtonAsyncCancelRx Color="Color.Secondary" Icon="@Icons.Material.Filled.Add"
                                State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10)
                                CancelColor=Color.Error HasProgress=@true ForceBadge=@true />

    <MudFabAsyncRx Color="Color.Secondary" EndIcon="@Icons.Material.Filled.PlusOne"
                   State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync />

    <MudFabAsyncRx Color="Color.Secondary" EndIcon="@Icons.Material.Filled.PlusOne"
                   State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync HasProgress=@true />

    <MudFabAsyncRx Color="Color.Secondary" EndIcon="@Icons.Material.Filled.PlusOne"
                   State=@Service.CountStateAsync ChangeStateAsync=@TestService.IncrementCounterAsync HasProgress=@true ForceBadge=@true />

    <MudFabAsyncCancelRx Color="Color.Secondary" EndIcon="@Icons.Material.Filled.Add"
                         State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10) />

    <MudFabAsyncCancelRx Color="Color.Secondary" EndIcon="@Icons.Material.Filled.Add"
                         State=@Service.CountStateAsync ChangeStateAsync=@TestService.AddToCounterAsync(10) HasProgress=@false />

    <MudBadge Content="100" Color="Color.Primary" Overlap="true" Class="mx-6 my-4">
        <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Default" />
    </MudBadge>
</MudStack>
