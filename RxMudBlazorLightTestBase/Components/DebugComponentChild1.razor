@inherits RxBLStateSubscriber<TestService>

<DisplayRenderCycle Owner=@Owner>
    <MudStack Row=@true>
        <MudText Typo="Typo.h3" GutterBottom="true">@Owner.Counter</MudText>
        <MudText Typo="Typo.caption">@($"ServiceStateCMD: {Owner.ServiceStateCMD.StateID}")</MudText>
    </MudStack>
</DisplayRenderCycle>

<DisplayRenderCycle Owner=@Owner>
    <MudButtonRx Color="Color.Primary" Variant="Variant.Filled" StateCommand=@Owner.ServiceStateCMD
                 ExecuteCallback=@Owner.IncrementCounter CanChangeCallback=@Owner.IncrementStateCanChange>Increment
    </MudButtonRx>
</DisplayRenderCycle>

@code
{
    protected override void OnInitialized()
    {
        LogStateChange = true;
        base.OnInitialized();
    }
}