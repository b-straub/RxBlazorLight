@inherits RxBLServiceSubscriber<StateService>

<PageTitle>SimpleState</PageTitle>

<MudStack>
    <MudText Class="mb-4">Current count: @Service.Counter.Value</MudText>
    <MudText Class="mb-4">Current count Async: @Service.CounterAsync</MudText>

    <MudSlider @bind-Value=@Service.Counter.Value />
    <MudStack Row=@true AlignItems=@AlignItems.Center>
        <MudButton Disabled=@(!StateService.CounterCanChange(Service.CounterAsync)) OnClick=@(() => Service.Counter.Value++)>Increment</MudButton>
        <MudButtonAsyncCancelRx StateCommand=@Service.CounterAsyncCMD ChangeStateAsync=Service.AddAsync(10) CanChange=@Service.CounterAsyncCanChange CancelText="Cancel Add">Add</MudButtonAsyncCancelRx>
    </MudStack>
</MudStack>