@inherits RxBLScopedServiceSubscriber<StateService>

<MudStack>
    <MudText Class="mb-4">Current count: @Service.Counter.Value</MudText>
 
    <MudSlider @bind-Value=@Service.Counter.Value />
    <MudStack Row=@true AlignItems=@AlignItems.Center>
        <MudButtonRx StateCommand=@Service.Command ExecuteCallback=@Service.Increment CanChangeCallback=@Service.CounterCanChange>Increment</MudButtonRx>
        <MudButtonAsyncRx StateCommand=@Service.CounterAsyncCMDCancel ExecuteAsyncCallback=Service.AddAsync(10) CanChangeCallback=@Service.CounterAsyncCanChange CancelText="Cancel Add">Add</MudButtonAsyncRx>
    </MudStack>
    <StateSubScope Service=@Service></StateSubScope>
</MudStack>