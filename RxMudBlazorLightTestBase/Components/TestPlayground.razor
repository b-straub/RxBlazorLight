@inherits RxBLServiceSubscriber<TestService>

<PageTitle>TestPlayground</PageTitle>

<MudStack AlignItems="AlignItems.Center">
    <MudText Typo="Typo.h3" GutterBottom="true">@($"InputTest {Service.TextValue.Value} / {Service.GetRadio().Value} / {Service.RatingValue.Value}")</MudText>
    <TimerComponent Name="Gobal" />
    <RxBLServiceScope TScope=@TimerService.TimerScope TService=@TimerService ScopeFactory=@TimerService.CreateScope>
        <TimerComponent Name="TestPlayground" />
    </RxBLServiceScope>
    <MudText id="result" Class="mb-4">Current count: @Service.CountState.Value</MudText>
    <MudRadioGroupAsyncRx id="radio" StateGroupAsync=@Service.GetPizzas2() SelectionChangedAsync=@TestService.ChangePizzaAsync />
    <MudButtonRx id="button1" Color=" Color.Primary" Variant="Variant.Filled" State=@Service.CountState ChangeState=@TestService.IncrementCounter>Increment</MudButtonRx>
    <MudButtonRx id="button2" Color="Color.Primary" Variant="Variant.Filled" State=@Service.CountState ChangeState=@(TestService.AddToCounter(5))>Add 5</MudButtonRx>
    <MudText Typo="Typo.h5" GutterBottom="true">@($"Count State Changes {_countStateChanges}")</MudText>

    <MudGrid>
        @if (Service.Exceptions.Any())
    {
        <MudItem xs="12">
            <MudText Typo="Typo.h5" GutterBottom="true">@GetExceptions()</MudText>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick=@(() => Service.ResetExceptions())>Reset Exceptions</MudButton>
        </MudItem>
    }
    </MudGrid>
</MudStack>

@code {
    [Inject]
    public required TimerService TimerService { get; init; }

    private long _countStateChanges = 0;

    protected override void OnServiceStateHasChanged(ServiceChangeReason cr)
    {
        if (cr.StateID == Service.CountState.ID && Service.CountState.Changed())
        {
            _countStateChanges++;
        }
    }

    private string GetExceptions()
    {
        return Service.Exceptions.Aggregate("", (p, n) => p + $"{n.Exception.Message} - {n.ID}, ").TrimEnd(new[] { ' ', ',' });
    }
}