<MudStack Row=@true AlignItems="AlignItems.Center">
    <MudToggleIconButtonRx RxState=@Scope.Suspended Icon="@Icons.Material.Outlined.PauseCircle" Color="@Color.Error"
                        ToggledIcon="@Icons.Material.Outlined.NotStarted" ToggledColor="@Color.Success" />
    <MudText Color=@(Scope.TimerState.Value is TimerService.State.OVER20 ? Color.Warning : Color.Default)>Current seconds in @Name: @Scope.ComponentTimer.Value</MudText>
</MudStack>

@code
{
    [CascadingParameter]
    public required TimerService.TimerScope Scope { get; init; }

    [Parameter, EditorRequired]
    public required string Name { get; init; }
}